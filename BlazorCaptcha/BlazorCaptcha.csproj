<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RazorLangVersion>3.0</RazorLangVersion>
    <Copyright>Copyright 2020</Copyright>
    <PackageProjectUrl>https://github.com/tossnet/Blazor-Captcha</PackageProjectUrl>
    <RepositoryUrl>https://github.com/tossnet/Blazor-Captcha</RepositoryUrl>
    <PackageTags>Blazor, captcha</PackageTags>
    <Authors>Christophe Peugnet</Authors>
    <Company>Christophe PeugnetChristophe Peugnet</Company>
    <Description>Generates a captcha image for a Blazor Server application</Description>
    <PackageReleaseNotes>Generates a captcha image for a Blazor Server application</PackageReleaseNotes>
    <PackageIcon>icon.png</PackageIcon>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="wwwroot\refresh.svg" />
  </ItemGroup>

  <ItemGroup>
    <None Include="icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="wwwroot\refresh.svg" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="3.1.3" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="3.1.3" />
    <PackageReference Include="System.Drawing.Common" Version="4.7.0" />
  </ItemGroup>

</Project>
