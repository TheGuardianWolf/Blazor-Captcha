<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Copyright>Copyright 2020-2022</Copyright>
		<PackageProjectUrl>https://github.com/tossnet/Blazor-Captcha</PackageProjectUrl>
		<RepositoryUrl>https://github.com/tossnet/Blazor-Captcha</RepositoryUrl>
		<PackageTags>Blazor, captcha</PackageTags>
		<Authors>Christophe Peugnet</Authors>
		<Company>Christophe Peugnet</Company>
		<Description>Generates a captcha image for a Blazor Server application</Description>
		<PackageReleaseNotes>
			change : NET6, change CSS style of the button (removal of the bootstrap style)
		</PackageReleaseNotes>
		<PackageIcon>icon.png</PackageIcon>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Version>1.2.0</Version>
		<AssemblyVersion>1.2.0.0</AssemblyVersion>
		<FileVersion>1.2.0.0</FileVersion>
	</PropertyGroup>

  <ItemGroup>
    <Content Remove="wwwroot\refresh.svg" />
  </ItemGroup>



  <ItemGroup>
    <None Include="icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="6.0.2" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.2" />
    <PackageReference Include="SkiaSharp" Version="2.88.0-preview.187" />
    <PackageReference Include="SkiaSharp.NativeAssets.WebAssembly" Version="2.88.0-preview.187" />
  </ItemGroup>


  <ItemGroup>
    <Resource Include="wwwroot\refresh.svg" />
  </ItemGroup>

</Project>
